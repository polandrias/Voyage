<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta content='True' name='HandheldFriendly' />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <!-- iPhone 5 -->
    <meta content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)" name="viewport" />

    <title>@ViewBag.Title - Voyage</title>
    
    @Styles.Render("~/Content/styles")

    <!-- Google Font -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,300,700,600,800' rel='stylesheet' type='text/css'>

</head>
<body>

    <div id="wrapper">

        <div class="container">

            <header id="top" class="navbar bs-docs-nav" role="banner">
                <div class="navbar-header">
                    <a href="#" class="logo"><img src="~/Content/Images/logo.png" /></a>
                    <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <nav class="navbar-collapse bs-navbar-collapse collapse" role="navigation" aria-expanded="false">
                    <ul class="menu">
                        <li><a href="#">Program</a></li>
                        <li><a href="#">Kommende film</a></li>
                        <li><a href="#">Forpremiere</a></li>
                    </ul>

                </nav>

                <div class="search col-md-4 no-padding hidden-sm hidden-xs">
                    <input type="text" placeholder="Søg efter film..." />
                    <span class="search-btn glyphicon glyphicon-search"></span>
                </div>
            </header> <!-- // top -->

            
            @RenderBody()

            
            <section id="footer">

                <div class="col-md-12">

                    <div class="col-md-2 col-sm-6 col-xs-12">
                        <h3>Udstyr</h3>
                        <ul>
                            <li><a href="#">Dolby Surround 7.1</a></li>
                            <li><a href="#">HFR 3D</a></li>
                            <li><a href="#">RealD 3D</a></li>
                            <li><a href="#">Sony Digital 4K</a></li>
                        </ul>
                    </div>

                    <div class="col-md-2 col-sm-6 col-xs-12">
                        <h3>Om biografen</h3>
                        <ul>
                            <li><a href="#">Sci fi (cult)</a></li>
                            <li><a href="#">Sci fi Bio</a></li>
                            <li><a href="#">Parkering</a></li>
                            <li><a href="#">Gavekort</a></li>
                            <li><a href="#">Åbningstider</a></li>
                            <li><a href="#">Billetautomater</a></li>
                        </ul>
                    </div>

                    <div class="col-md-2 col-sm-6 col-xs-12">
                        <h3>Kontakt</h3>
                        <ul>
                            <li>Voyage A/S</li>
                            <li>Tlf. +45 60 20 12 12</li>
                            <li>Randersvej 172</li>
                            <li>8000 Aarhus C</li>
                        </ul>
                    </div>

                    <div class="col-md-4 col-sm-6 col-xs-12 pull-right">
                        <h3>Find os</h3>
                    </div>

                </div>

            </section> <!-- // footer -->


        </div> <!-- // container -->

    </div> <!-- // wrapper -->

    @*<script src="~/Scripts/jquery-1.11.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.fancybox.pack.js"></script>
    <script src="~/Scripts/functions.js"></script>
    @RenderSection("scripts", required: false)*@

    @Scripts.Render("~/Scripts/scripts")

</body>
</html>