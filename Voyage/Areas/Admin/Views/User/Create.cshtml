@model Voyage.Models.User

@{
    ViewBag.Title = "Opret bruger";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

